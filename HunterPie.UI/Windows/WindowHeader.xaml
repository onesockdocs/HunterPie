<UserControl x:Class="HunterPie.UI.Windows.WindowHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:image="clr-namespace:HunterPie.UI.Controls.Image"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:native="clr-namespace:HunterPie.UI.Controls.Buttons"
             d:DesignHeight="30"
             d:DesignWidth="800"
             Loaded="OnLoaded"
             mc:Ignorable="d">
	<Grid x:Name="PART_Header"
	      Height="30"
	      VerticalAlignment="Top"
	      Background="Transparent"
	      MouseLeftButtonDown="OnLeftMouseDown">
		<!--  Left container  -->
		<StackPanel Margin="5,0,0,0"
		            HorizontalAlignment="Left"
		            Orientation="Horizontal">
			<image:Icon Width="20"
			            Height="20"
			            Margin="0,0,5,0"
			            d:Image="{StaticResource ICON_INFO}"
			            Foreground="{StaticResource Brushes.HunterPie.Foreground.Tertiary}"
			            Image="{Binding Owner.Icon, Mode=OneWay}" />
			<TextBlock HorizontalAlignment="Stretch"
			           VerticalAlignment="Center"
			           d:Text="HunterPie"
			           FontSize="14"
			           Foreground="{StaticResource Brushes.HunterPie.Foreground.Tertiary}"
			           Text="{Binding Owner.Title}" />
		</StackPanel>

		<!--  Right container  -->
		<StackPanel HorizontalAlignment="Right"
		            Orientation="Horizontal">
			<native:Button Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
			               Margin="2"
			               Padding="0"
			               BackgroundHover="{DynamicResource Brushes.HunterPie.Background.Primary}"
			               Content="_"
			               CornerRadius="5"
			               FontSize="14"
			               Foreground="{StaticResource Brushes.HunterPie.Foreground.Secondary}"
			               OnClick="OnMinimizeButtonClick" />

			<native:Button Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
			               Margin="2"
			               Padding="0"
			               HorizontalAlignment="Right"
			               BackgroundHover="{DynamicResource Red@700}"
			               Content="✕"
			               CornerRadius="5"
			               FontSize="15"
			               Foreground="{DynamicResource Brushes.HunterPie.Foreground.Secondary}"
			               ForegroundHover="{DynamicResource Red}"
			               OnClick="OnCloseButtonClick" />

		</StackPanel>
	</Grid>
</UserControl>
